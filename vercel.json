{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/shorten",
      "dest": "api/shorten.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/([a-zA-Z0-9]+)",
      "dest": "api/redirect.js"
    }
  ]
}
